{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "frontend/**", "use": "@vercel/static" }
  ],
  "functions": {
    "api/index.py": { "runtime": "python3.11", "maxDuration": 30, "memory": 1024 }
  },
  "routes": [
    { "src": "/api/(.*)",  "dest": "/api/index.py" },
    { "src": "/auth/(.*)", "dest": "/api/index.py" },
    { "src": "/(.*)",      "dest": "/frontend/$1" }
  ]
}
